{% extends 'LovochemieBundle::layout.html.twig' %}

{% block title %}{{ "title_page_not_found"|trans({}, 'SonataPageBundle')}}{% endblock %}

{% block sonata_page_container %}
    <div>
        <h2>{{ "title_page_not_found"|trans({'pathInfo': pathInfo}, 'SonataPageBundle') }}</h2>

        {% if creatable %}
            <p>
                <a href="{{ path('admin_orangegate_page_page_create', {'url': pathInfo, 'siteId': site.id}) }}">{{ "create_page"|trans({'pathInfo': pathInfo}, 'SonataPageBundle') }}</a>
            </p>
        {% else %}
            <p>
                {{ "message_page_does_not_exist"|trans({'pathInfo': pathInfo}, 'SonataPageBundle') }}
            </p>
        {% endif%}
    </div>
{% endblock %}
